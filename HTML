<head>
  <meta charset="UTF-8">
  <title>薪資查詢</title>
  <style>
    body { font-family: sans-serif; padding: 20px; }
    label, input, select { display: block; margin: 10px 0; }
    table { border-collapse: collapse; width: 100%; margin-top: 20px; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: center; }
  </style>
</head>
<body>
  <h2>查詢個人薪資</h2>
  <label>姓名：
    <input type="text" id="name" placeholder="請輸入姓名">
  </label>
  <label>月份：
    <select id="month">
      <option value="">請選擇月份</option>
      <option value="1">1 月</option>
      <option value="2">2 月</option>
      <option value="3">3 月</option>
      <option value="4">4 月</option>
      <option value="5">5 月</option>
      <option value="6">6 月</option>
      <option value="7">7 月</option>
      <option value="8">8 月</option>
      <option value="9">9 月</option>
      <option value="10">10 月</option>
      <option value="11">11 月</option>
      <option value="12">12 月</option>
    </select>
  </label>
  <button onclick="fetchSalary()">查詢</button>

  <div id="result"></div>

  <script>
    function fetchSalary() {
      const name = document.getElementById("name").value.trim();
      const month = document.getElementById("month").value;
      const resultDiv = document.getElementById("result");

      if (!name || !month) {
        resultDiv.innerHTML = "<p style='color:red;'>請輸入姓名與選擇月份</p>";
        return;
      }

      fetch(`https://script.google.com/macros/s/AKfycbwi6Xg-x5jPskXdvMntAKh6TCsQn9ihLc69VfDOJ49XKVclfowTlno0bdU5V_f-Z91W/exec?name=${encodeURIComponent(name)}&month=${month}`)
        .then(res => res.json())
        .then(data => {
          if (typeof data === "string") {
            resultDiv.innerHTML = `<p>${data}</p>`;
          } else {
            let html = "<table><tr>";
            for (let key in data[0]) html += `<th>${key}</th>`;
            html += "</tr>";
            for (let row of data) {
              html += "<tr>";
              for (let key in row) html += `<td>${row[key]}</td>`;
              html += "</tr>";
            }
            html += "</table>";
            resultDiv.innerHTML = html;
          }
        })
        .catch(err => {
          console.error(err);
          resultDiv.innerHTML = "<p style='color:red;'>查詢失敗，請稍後再試。</p>";
        });
    }
  </script>
</body>
</html>
